{% extends "layouts/_page-list.njk" %}

{% set pages = [
    {title: 'Главная', href: 'main.html'},
    {title: 'Каталог', href: 'catalog.html'},
    {title: 'Карточка товара', href: 'product-detailed.html'},
    {title: 'Корзина', href: 'cart.html'},
    {title: '404', href: '404.html'}
] %}

{% block content %}
    <div class="container">
        <div class="page-list">
            <div class="page-list-header">
                Страницы
            </div>
            <div class="page-list-title">
                <div class="page-list-body">
                    {% for page in pages %}
                        <div class="page-list-item">
                            <div class="page-list-link-box">
                                <a href="{{ page.href }}" class="page-list-link">
                                    {{ page.title }}
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}